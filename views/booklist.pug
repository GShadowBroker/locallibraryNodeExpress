extends layout

block content
    div(class="template-content")
        h1 Book list page
        ul
            each book in books
                li
                    a(href=book.url)
                        if book.authors.length == 1
                            =`${book.title} (${book.authors[0].name})`
                        else if book.authors.length > 1
                            each author in book.authors
                                =`${book.title} (${author.name})`
                        else
                            = book.title