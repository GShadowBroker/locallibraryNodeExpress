extends layout

block content
    h1 Add a new book:
    form(action="" method="post")
        if errors
                ul
                    each error in errors
                        li(class="text-danger")= error.message
        table
            tr
                td
                    label(for="title") Title
                td
                    input(type="text" name="title" placeholder="e.g. Book of Kells" value=title required)
            tr
                td
                    label(for="authorId") Author
                td
                    select(name="authorId" value=authorId)
                        option(value="") No author selected
                        if authors
                            each author in authors
                                option(value=author.id)= author.name
            tr
                td
                    label(for="summary") Summary
                td
                    input(type="text" name="summary" placeholder="Enter a short summary" value=summary required)
            tr
                td
                    label(for="isbn") ISBN
                td
                    input(type="text" name="isbn" placeholder="e.g. 978-3-16-148410-0" value=isbn required)
            tr
                td
                    label(for="genreId") Genre
                td
                    select(name="genreId" value=genreId)
                        option(value="") No genre selected
                        if genres
                            each genre in genres
                                option(value=genre.id)= genre.name
            tr
                td
                    input(type="submit" value="Save")
