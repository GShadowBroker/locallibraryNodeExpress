doctype html
html(lang='en')
	head
		title= title
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')

		script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous")
		script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
		script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous")
		link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")

		script(src="/javascripts/fontawesome.js")
		block css
			link(rel='stylesheet', href='/stylesheets/style.css')
	body
		block banner
			div(class="header-banner")
				.title-header
					if name
						span(class="login")
							span(class="welcome")
								a(href="/profile") Welcome #{name}!
							form(action="/auth/logout?_method=DELETE" method="post")
								input(type="submit" value="Logout")
					else
						span(class="login")
							a(href="/auth/login") Login
							a(href="/auth/register") Register
					i(class="fas fa-book-reader")
					h1 LOCAL LIBRARY

		div(id="root")

			div(class="loadscreen")
				div(class="spinner-border" role="status")
					span(class="sr-only")|Loading...
			div(class="container-fluid")

				div(class="row")
					div(class="nav-menu col-md-3")
						block sidebar
							ul(class='sidebar-nav')
								li 
									a(href='/') Home
								li 
									a(href='/books') All books
								li 
									a(href='/authors') All authors
								li 
									a(href='/genres') All genres
								li 
									a(href='/bookinstances') All book-instances
								li 
									hr
								li 
									a(href='/authors/create') Create new author
								li 
									a(href='/genres/create') Create new genre
								li 
									a(href='/books/create') Create new book
								li 
									a(href='/bookinstances/create') Create new book instance (copy)
				
					div(class="content col-md")
						div(class="form-container")
							block content

							


		script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
		block javascript
			script(src="/javascripts/script.js")
		